<div class="row">
  <div class="col-sm-12">
    <form id="registration_form">
      <div class="form-group">
        <label for="username_input">{{ usernamePlaceholder }}</label>
        <input required="required" type="text" class="form-control" placeholder="{{ usernamePlaceholder }}" name="username">
      </div>
      <div class="form-group">
        <label for="email_input">{{ emailPlaceholder }}</label>
        <input required="required" type="email" class="form-control" id="email_input" placeholder="{{ emailPlaceholder }}" name="email">
      </div>
      <div class="form-group">
        <label for="password_input">{{ passwordPlaceholder }}</label>
        <input required="required" type="password" class="form-control" id="password_input" placeholder="{{ passwordPlaceholder }}" name="password">
      </div>
      <button type="submit" class="btn btn-success">{{ registerButtonText }}</button>
    </form>
    <a class="pull-right" href="/popup/login.html">{{ loginLinkText }}</a>
  </div>
</div>

