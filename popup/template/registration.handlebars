<div class="row">
    <div class="col-xs-12">
        <div>
            {{#each errors}}
                <p class="text-danger">{{this}}</p>
            {{/each}}
        </div>
        <form id="registration_form">
            <div class="form-group">
                <label for="username_input">{{ chrome_t 'usernamePlaceholder' }}</label>
                <input required="required" type="text" class="form-control"
                       placeholder="{{ chrome_t 'usernamePlaceholder' }}" name="username" value="{{form.username}}">
            </div>
            <div class="form-group">
                <label for="email_input">{{ chrome_t 'emailPlaceholder' }}</label>
                <input required="required" type="email" class="form-control" id="email_input"
                       placeholder="{{ chrome_t 'emailPlaceholder' }}" name="email" value="{{form.email}}">
            </div>
            <div class="form-group">
                <label for="password_input">{{ chrome_t 'passwordPlaceholder' }}</label>
                <input required="required" type="password" class="form-control" id="password_input"
                       placeholder="{{ chrome_t 'passwordPlaceholder' }}" name="password" value="{{form.password}}">
            </div>
            <button id="registration_button" type="button" class="btn btn-success">{{ chrome_t 'registerButtonText' }}</button>
            <a class="pull-right" href="/popup/login.html">{{ chrome_t 'loginLinkText' }}</a>
        </form>
    </div>
</div>

