<div class="row">
  <div class="col-sm-12">
    <form id="registration_form">
      <div class="form-group">
        <label for="username_input">{{ chrome_t 'usernamePlaceholder' }}</label>
        <input required="required" type="text" class="form-control" placeholder="{{ chrome_t 'usernamePlaceholder' }}" name="username">
      </div>
      <div class="form-group">
        <label for="email_input">{{ chrome_t 'emailPlaceholder' }}</label>
        <input required="required" type="email" class="form-control" id="email_input" placeholder="{{ chrome_t 'emailPlaceholder' }}" name="email">
      </div>
      <div class="form-group">
        <label for="password_input">{{ chrome_t 'passwordPlaceholder' }}</label>
        <input required="required" type="password" class="form-control" id="password_input" placeholder="{{ chrome_t 'passwordPlaceholder' }}" name="password">
      </div>
      <button type="submit" class="btn btn-success">{{ chrome_t 'registerButtonText' }}</button>
    </form>
    <a class="pull-right" href="/popup/login.html">{{ chrome_t 'loginLinkText' }}</a>
  </div>
</div>

