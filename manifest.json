{
  "name": "EzDict",
  "version": "0.2.0",
  "manifest_version": 2,
  "description" : "EzDict extension",
  "icons": {
    "16": "icons/green/16х16-green.png",
    "48": "icons/green/48х48-green.png",
    "128": "icons/green/128х128-green.png"
  },
  "permissions": [
    "http://api.ezdict.potapovmax.com/",
    "storage"
  ],
  "browser_action": {
    "default_icon": {
      "19": "icons/green/19х19-green.png",
      "38": "icons/green/38х38-green.png"
    },
    "default_title": "EzDict",
    "default_popup": "popup/router.html"
  },
  "background": {
    "scripts": [
      "bower_components/jquery/jquery.min.js",
      "background/api.js",
      "background/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "css": ["content/tooltip/css/app.css", "content/tooltip/css/whhg.css"],
    "js": [
      "bower_components/jquery/jquery.min.js",
      "bower_components/jquery-slimscroll/jquery.slimscroll.min.js",
      "content/tooltip/js/webcomponents-config.js",
      "bower_components/webcomponentsjs/webcomponents.min.js",
      "bower_components/x-tag-core/dist/x-tag-core.min.js",
      "content/tooltip/js/tooltip.js",
      "content/content.js"
    ]
  }],
  "web_accessible_resources": [
    "content/tooltip/font/webhostinghub-glyphs.ttf",
    "content/tooltip/font/webhostinghub-glyphs.svg",
    "content/tooltip/font/webhostinghub-glyphs.eot",
    "content/tooltip/tooltip.html",

    "bower_components/polymer/polymer-micro.html",
    "bower_components/polymer/polymer-mini.html",
    "bower_components/polymer/polymer.html",

    "bower_components/ezdict-tooltip-element/css/ezdict_tooltip_element.css",
    "bower_components/ezdict-tooltip-element/css/icons.css",
    "bower_components/ezdict-tooltip-element/js/ezdict_tooltip_element.js",
    "bower_components/ezdict-tooltip-element/ezdict_tooltip_element.html"
  ]
}
