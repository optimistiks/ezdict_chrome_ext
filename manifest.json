{
  "name": "EzDict",
  "version": "0.1.0",
  "manifest_version": 2,
  "description" : "EzDict extension",
  "icons": { "16": "icons/16x16.png", "48": "icons/16x16.png", "128": "icons/16x16.png" },
  "permissions": [
    "http://api.ezdict.potapovmax.com/",
    "storage"
  ],
  "browser_action": {
    "default_icon": { "19": "icons/16x16.png", "38": "icons/16x16.png" },
    "default_title": "EzDict",
    "default_popup": "popup/router.html"
  },
  "background": {
    "scripts": [
      "bower_components/jquery/jquery.min.js",
      "background/api.js",
      "background/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "bower_components/jquery/jquery.min.js",
      "content/content.js"
    ]
  }]
}
